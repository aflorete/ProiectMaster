@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Product";
}

<div class="row mb-2 mt-2 operationsButtons">
    <div class="col-md-12">
        <a style="background-color: #a4acda" href="/Product/New" class="btn btn-new btn-outline-new font-weight-bold mr-2" data-toggle="tooltip" title="New" data-placement="top">
            <span class="fa fa-plus-circle"></span>
        </a>

        <button style="background-color: #a4acda; border-color: #a4acda" class="btn btn-outline-dark font-weight-bold mr-2" data-toggle="tooltip" title="Edit" data-placement="top" onclick="Product.onEditBtnPress()">
            <span class="fa fa-edit"></span>
        </button>

        <button style="background-color: #a4acda"  type="button" class="btn btn-delete btn-outline-delete font-weight-bold mr-2" id="btnDelete" data-toggle="tooltip" data-placement="top" title="Delete" onclick="Product.onDelete()">
            <span class="fa fa-trash"></span>
        </button>
    </div>
</div>

<br/><br/>

     <table style="background-color: #83adb5 " id="table" class="table table-striped table-dark">
         <thead>
             <tr>
                 <th hidden>Space Id</th>
                 <th>Image</th>
                 <th>Space name</th>
                 <th>Price</th>
                 <th>Is available</th>
                 <th>Description</th>
             </tr>
         </thead>

         <tbody style="background-color: #DAA4AC"> 

             @foreach (var item in Model)
              {
             <tr id="@item.Id">
                 <td hidden>@item.Id</td>
                 <td><img style="width: 300px; height: 150px;" src="~/@item.ImagePath" alt="There is no image diplayed at the moment." /></td>
                 <td>@item.Name</td>
                 <td>@item.Price</td>
                 <td><input type="checkbox" checked="@item.IsAvailable" /></td>
                 <td>@item.Name</td>
             </tr>
              }

         </tbody>

     </table>