@model IEnumerable<ProductVM>

@{
    ViewData["Title"] = "Home Page";
    var detailsRoute = "/Details/{0}";
}

<div class="row">

    @foreach( var product in Model)
    {
        <div class="col-4">
            <div class="card mb-4" style="background-color: #b2d8d8" >

                <div class="card-header" >
                    <h4 class="my-0 font-weight-normal">
                        <label style="font-size: 23px; color: #006666;">@product.Name</label>
                    </h4>
                </div>

                <img class="card-img-top" style="height:100%" src="~/@product.ImagePath" alt="No image shown" />

                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="btn-group">
                            <label style="font-size: 20px; color: #006666"><b>@product.Price$/Month</b></label>
                        </div>
                        <a href="@string.Format(detailsRoute, product.Id)" class="btn pull-right btn-outline-info">View Details</a>
                    </div>
                </div>

            </div>
        </div>
    }

</div>